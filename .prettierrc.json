{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 120,
  "semi": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "proseWrap": "always",
  "bracketSameLine": true,
  "singleQuote": true,
  "arrowParens": "avoid",
  "singleAttributePerLine": true,
  "endOfLine": "lf",
  "importOrder": ["^@angular/(.*)$", "^rxjs|rxjs/(.*)$", "^@vfde-ent/(.*)$", "<THIRD_PARTY_MODULES>", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "decorators-legacy"]
}
